---
import UserAvatar from './UserAvatar.astro';

export interface Props {
  authorName: string;
  authorHandle: string;
  avatarUrl: string;
  postContent: string;
  likesCount: number;
  commentsCount: number;
  tags: string[];
  postId: string;
  isDetailPage?: boolean;
}

const { authorName, authorHandle, avatarUrl, postContent, likesCount, commentsCount, tags, postId, isDetailPage } = Astro.props as Props;
---

<div class="bg-zinc-800 rounded-lg border border-zinc-700 p-6 mb-4">
  <!-- Header -->
  <div class="flex items-center">
    <UserAvatar name={authorName} avatar={avatarUrl} size="md" />
    <div class="ml-3">
      <div class="font-semibold text-zinc-100">{authorName}</div>
      <div class="text-sm text-zinc-400">{authorHandle}</div>
    </div>
  </div>

  <!-- Body -->
  {isDetailPage ? (
    <p class="mt-4 text-zinc-200 whitespace-pre-wrap">{postContent}</p>
  ) : (
    <a href={`/post/${postId}`} class="block mt-4 text-zinc-200 hover:text-zinc-50 transition-colors">
      <p class="whitespace-pre-wrap">{postContent}</p>
    </a>
  )}

  <!-- Footer -->
  <div class="mt-4 pt-4 border-t border-zinc-700 flex justify-between items-center">
    <!-- Engajamento (Lado Esquerdo) -->
    <div class="flex items-center space-x-4 text-sm text-zinc-400">
      <div class="flex items-center space-x-1">
        <!-- Ícone de Like (SVG) -->
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span>{likesCount} curtidas</span>
      </div>
      
      <div class="flex items-center space-x-1">
        <!-- Ícone de Comentário (SVG) -->
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span>{commentsCount} comentários</span>
      </div>
    </div>

    <!-- Tags (Lado Direito) -->
    <div class="flex items-center space-x-2">
      {tags.map((tag) => (
        <span class="bg-zinc-700 text-teal-400 text-xs font-medium px-2.5 py-0.5 rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>