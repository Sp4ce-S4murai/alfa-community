---
import UserAvatar from '@components/community/UserAvatar.astro';
import type { UserProfile } from '@lib/mockData';
import Button from '@components/ui/Button.astro';

export interface Props {
  user: UserProfile;
}

const { user } = Astro.props as Props;
---

<div class="bg-zinc-800 border border-zinc-700 rounded-lg p-4 flex flex-col items-center text-center">
  <!-- Avatar -->
  <UserAvatar name={user.name} avatar={user.avatarUrl} size="lg" />

  <!-- Nome -->
  <h3 class="mt-3 text-lg font-semibold text-zinc-100">{user.name}</h3>

  <!-- Handle -->
  <p class="text-sm text-zinc-400">{user.handle}</p>

  <!-- BotÃ£o/Link para perfil -->
  <a href={`/perfil/${user.handle.replace('@', '')}`} class="mt-4 bg-teal-500 text-zinc-900 font-semibold px-4 py-2 rounded-lg text-sm hover:bg-teal-400 transition-colors">
    Ver Perfil
  </a>
</div>