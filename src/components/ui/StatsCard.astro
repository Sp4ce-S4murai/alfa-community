---
export interface Props {
  value: string | number;
  label: string;
  icon?: string;
}

const { value, label, icon } = Astro.props;
---

<div class="bg-zinc-800 rounded-lg p-6 flex flex-col items-center justify-center text-center">
  {icon && (
    <div class="mb-2">
      <span class={icon}></span>
    </div>
  )}
  
  <div class="text-4xl font-bold text-teal-400 mb-1">
    {value}
  </div>
  
  <div class="text-lg text-zinc-300">
    {label}
  </div>
</div>